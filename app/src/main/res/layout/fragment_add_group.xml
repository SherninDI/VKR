<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_file_id"
                android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/linear_title"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/file_id_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/file_id_t"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="120dp"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:id="@+id/file_id_t"
                    android:text="@string/file_id_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/file_id_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toStartOf="@id/file_id_e"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="240dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/file_id_e"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/file_id_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_title"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_file_id"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@id/linear_time"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/title_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/title_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="120dp"
                    android:maxWidth="160dp"

                    android:layout_height="match_parent"
                    android:id="@+id/title_t"
                    android:text="@string/title_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/title_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toStartOf="@id/title_e"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="240dp"
                    android:maxWidth="300dp"

                    android:layout_height="match_parent"
                    android:id="@+id/title_e"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/title_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_time"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_title"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@id/linear_mode"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/time_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/time_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/time_t"
                    android:text="@string/time_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/time_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/time_e"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/time_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_mode"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_time"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@id/linear_spre"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/mode_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/mode_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="80dp"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mode_t"
                    android:text="@string/mode_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/mode_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mode_s"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/mode_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_spre"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_mode"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@id/linear_maxf"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/spre_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/spre_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="80dp"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spre_t"
                    android:text="@string/spre_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/spre_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spre_s"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/spre_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_maxf"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_spre"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@id/linear_cnt"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/maxf_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/maxf_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="80dp"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:id="@+id/maxf_t"
                    android:text="@string/maxf_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/maxf_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/maxf_s"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/maxf_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_cnt"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_maxf"
                android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/linear_step"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:minWidth="36dp"
                    android:maxWidth="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/question_mark"
                    android:scaleType="fitCenter"
                    android:id="@+id/cnt_q"
                    android:background="@color/white"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="@+id/cnt_t"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cnt_t"
                    android:text="@string/cnt_t"
                    android:gravity="fill_vertical"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/cnt_q"
                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="160dp"
                    android:maxWidth="300dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/cnt_e"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toEndOf="@+id/cnt_t"
                    android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_step"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_cnt"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@id/linear_save"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edit_step"
                    android:text="@string/edit_steps"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linear_save"
                android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@id/linear_step"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent">


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/add_save"
                    android:text="@string/add_group"
            />
        </LinearLayout>


    </LinearLayout>
</ScrollView>



